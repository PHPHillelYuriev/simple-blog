{% extends 'base/base.html.twig' %}

{% block title %}{{ category.name|title }}{% endblock %}

{% block content %}
    
    <div class="container">
        <div class="row">

            <div class="col-sm-12 col-md-8">
                <h1>Posts from the category: {{ category.name|title }}</h1>

                {% for post in category.posts %}

                <div class="article-container my-1">
                    <a href="{{ path('showPostById', {'id': post.id}) }}">
                        <img class="article-img" src="{{ asset(asset(post.preview)) }}">
                        <span>{{ post.title|title }}</span>
                        <hr>            
                    </a>
                    <div class="article-title d-inline-block pl-3 align-middle">
                        
                        <span>{{ post.description|title }}</span>
                        <hr>
                        <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">{{ post.author }}</span>
                        <p class="pl-5 article-details float-right">{{ post.publishedAt|date("d.m.Y G:i:s") }}</p>                                
                    </div>
                </div>

                {% endfor %}
            </div>

        <!-- Right bar ad space -->
        {% block rightBar %}
            {{ parent() }}            
        {% endblock %}
        </div>
    </div>

{% endblock %}